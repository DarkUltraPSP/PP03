<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    tools:context=".AddIntervention">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/connexion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvInfoLogin"
                    android:layout_width="249dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="TextView" />

                <Button
                    android:id="@+id/btnDeco"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Deconnexion" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/infoMachine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="203dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Activite" />

                        <Spinner
                            android:id="@+id/spinActivite"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp" />

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Machine" />

                        <Spinner
                            android:id="@+id/spinMachine"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Cause Defaut" />

                        <Spinner
                            android:id="@+id/spinCauseDefaut"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Symptome Defaut" />

                        <Spinner
                            android:id="@+id/spinSymptome"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtView5"
                            android:layout_width="match_parent"
                            android:layout_height="19dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Heure de fin" />

                        <Spinner
                            android:id="@+id/spinDhDebut"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/txtView"
                            android:layout_width="match_parent"
                            android:layout_height="19dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Temps d'arret" />

                        <Spinner
                            android:id="@+id/spinCauseObjet"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/txtView7"
                            android:layout_width="match_parent"
                            android:layout_height="19dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Symptome Objet" />

                        <Spinner
                            android:id="@+id/spinSymptomeDefaut"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1" />

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="Commentaires a ajouter" />

            <LinearLayout
                android:id="@+id/commentaires"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="202dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <CheckBox
                        android:id="@+id/cbInterventionTerminee"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Intervention terminée" />

                    <CheckBox
                        android:id="@+id/cbMachineArretee"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Machine arretée" />

                    <CheckBox
                        android:id="@+id/cbChangementOrgane"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Changement d'organe" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Spinner
                        android:id="@+id/heureFin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:visibility="invisible" />

                    <Spinner
                        android:id="@+id/tpsPerdu"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:visibility="invisible" />

                    <CheckBox
                        android:id="@+id/cbPertes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pertes" />

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="Liste des intervenants et temps passé" />

            <ListView
                android:id="@+id/lvIntervenants"
                android:layout_width="match_parent"
                android:layout_height="82dp" />

            <LinearLayout
                android:id="@+id/newInterventant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/spinner24"
                    android:layout_width="580dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <Spinner
                    android:id="@+id/spinner23"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

            <Button
                android:id="@+id/addInterventant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="Ajouter " />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnSendIntervention"
                    android:layout_width="246dp"
                    android:layout_height="wrap_content"
                    android:text="Envoyer l'Intervention" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>