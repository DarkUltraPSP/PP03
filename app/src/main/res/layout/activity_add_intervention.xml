<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sendIntervention"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    tools:context=".AddIntervention">

    <androidx.core.widget.NestedScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/connexion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvInfoLogin"
                    android:layout_width="249dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="TextView" />

                <Button
                    android:id="@+id/btnDeco"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Deconnexion"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/infoMachine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="203dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Activite" />

                        <Spinner
                            android:id="@+id/spinActivite"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp" />

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Machine" />

                        <Spinner
                            android:id="@+id/spinMachine"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Cause Defaut" />

                        <Spinner
                            android:id="@+id/spinCauseDefaut"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Symptome Defaut" />

                        <Spinner
                            android:id="@+id/spinSymptomeDefaut"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvShowHour"
                            android:layout_width="match_parent"
                            android:layout_height="37dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Heure Debut" />

                        <Button
                            android:id="@+id/btnShowPopUp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Selectionnez une date et une heure de debut"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/txtView"
                            android:layout_width="match_parent"
                            android:layout_height="19dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Cause Objet" />

                        <Spinner
                            android:id="@+id/spinCauseObjet"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/txtView7"
                            android:layout_width="match_parent"
                            android:layout_height="19dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="Symptome Objet" />

                        <Spinner
                            android:id="@+id/spinSymptomeObjet"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:layout_weight="1" />

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Commentaires a ajouter" />

            <EditText
                android:id="@+id/editTextCommentaire"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="center"
                android:inputType="textPersonName" />

            <LinearLayout
                android:id="@+id/commentaires"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="202dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <CheckBox
                        android:id="@+id/cbInterventionTerminee"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Intervention terminée" />

                    <CheckBox
                        android:id="@+id/cbMachineArretee"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Machine arretée" />

                    <CheckBox
                        android:id="@+id/cbChangementOrgane"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Changement d'organe" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btnHeureFin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Selectionnez une date et une heure"
                        android:visibility="invisible" />

                    <Button
                        android:id="@+id/btnTpsArret"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Selectionnez une durée"
                        android:visibility="invisible" />

                    <CheckBox
                        android:id="@+id/cbPertes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pertes" />

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="Liste des intervenants et temps passé" />

            <ListView
                android:id="@+id/lvIntervenants"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@color/purple_200" />

            <LinearLayout
                android:id="@+id/newInterventant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/spinIntervenant"
                    android:layout_width="485dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/btnTpsPasse"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Temps passé" />

            </LinearLayout>

            <Button
                android:id="@+id/btnAddIntervLv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="Ajouter " />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnSendIntervention"
                    android:layout_width="246dp"
                    android:layout_height="wrap_content"
                    android:text="Envoyer l'Intervention" />
            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>